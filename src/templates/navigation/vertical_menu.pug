div#vertical-menu.vertical-menu.vertical-menu-inset.collapse(class=`${page.hasSideMenu ? 'navbar-toggleable-sm' : 'd-md-none'}`)
    ul.nav.nav-pills.nav-stacked.nav-side.vertical-menu-ancestors
        for item in page.verticalBreadcrumb
            li.nav-item
                a.nav-link(href=item[1])= item[0]
    ul.list-unstyled.vertical-menu-siblings
        unless page.isFrontPage
            li.vertical-menu-parent
                if page.verticalBreadcrumbParent[1]
                    a(href=page.verticalBreadcrumbParent[1])= page.verticalBreadcrumbParent[0]
                else
                    span= page.verticalBreadcrumbParent[0]
                if page.verticalBreadcrumbChildren
                    ul.list-unstyled.vertical-menu-children
                        for child in page.verticalBreadcrumbChildren
                            li
                                if child[0] === page.title
                                    span.vertical-menu-child-bulleted= child[0]
                                else
                                    a.vertical-menu-child-bulleted(href=child[1])= child[0]
        for sibling in page.verticalBreadcrumbSiblings
            unless sibling[0] === page.verticalBreadcrumbParent[0]
                li
                    a(href=sibling[1])= sibling[0]
